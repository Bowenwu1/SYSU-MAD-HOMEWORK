<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="add_button_style">
        <item name="android:textSize">10pt</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    
    <style name="tableTitle">
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="tableItem">
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="dialog_item">
        <item name="android:textSize">7pt</item>
    </style>

    <style name="dialog_item_phone" parent="dialog_item">
        <item name="android:textColor">@color/colorGreen</item>
    </style>
</resources>
